{
  "version": 2,
  "name": "line-shop-diagnosis-bot",
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/api/admin"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/api/admin/$1"
    },
    {
      "source": "/admin-ios",
      "destination": "/api/admin-ios"
    }
  ]
}