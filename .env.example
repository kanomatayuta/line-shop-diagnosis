# ðŸ”’ LINE Shop Diagnosis Tool - Environment Configuration
# Enterprise Edition Security Template

# ==========================================
# LINE Bot Configuration (Required)
# ==========================================
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# ==========================================
# Security Configuration (Critical)
# ==========================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_256_bit_encryption_key_here  
SESSION_KEY=your_256_bit_session_key_here

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

# Database (if using)
DATABASE_URL=your_database_connection_string

# ==========================================
# Monitoring & Analytics (Optional)
# ==========================================
ENABLE_METRICS=true
METRICS_ENDPOINT=/internal/metrics
HEALTH_CHECK_ENDPOINT=/api/health

# Alert Webhooks (Optional)
ALERT_WEBHOOK_URL=your_alert_webhook_url
INCIDENT_WEBHOOK_URL=your_incident_webhook_url

# ==========================================
# Performance Configuration
# ==========================================
CACHE_SIZE=1000
CACHE_TTL=900000
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=10

# ==========================================
# Production Deployment
# ==========================================
VERCEL_URL=https://line-shop-diagnosis.vercel.app
DOMAIN=yourdomain.com

# SSL/TLS Configuration
SSL_ENABLED=true
HSTS_MAX_AGE=31536000

# ==========================================
# Development Only (Remove in Production)
# ==========================================
# DEBUG=true
# DISABLE_RATE_LIMITING=false
# MOCK_EXTERNAL_APIS=false